@page "/itineraryactivities/create"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New Itineraries</h3>
<hr />
<br />

<FormComponents ButtonText="Create Itinerary Activity" ItineraryActivity="ItineraryActivity" OnValidSubmit="@CreateItineraryActivity" />

@code {
    ItineraryActivity ItineraryActivity = new ();

    private async Task CreateItineraryActivity()
    {
        ItineraryActivity.DateCreated = DateTime.Now;
        await _client.PostAsJsonAsync(Endpoints.ItineraryActivityEndpoint, ItineraryActivity);
        _navManager.NavigateTo("/itineraryactivities");
    }
}
