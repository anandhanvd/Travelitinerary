@inherits LayoutComponentBase

<style>
    /* Custom styles for a professional black and white combination */
    body {
        background-color: #f8f9fa; /* Light grey background */
        color: #212529; /* Black text color */
    }

    .BC_Header_top {
        background-color: #000; /* Black header background */
        color: #fff; /* White text color */
    }

    .BC_Header_2nd {
        background-color: #fff; /* White second header background */
        border-bottom: 1px solid #ddd; /* Border color for separation */
    }

    .BC_Content {
        padding: 20px;
    }

    .BC_Footer {
        background-color: #000; /* Black footer background */
        color: #fff; /* White text color */
        padding: 15px 0;
    }

    .BC_Copyright {
        background-color: #fff; /* White copyright background */
        color: #000; /* Black text color */
        padding: 15px 0;
        border-top: 1px solid #ddd; /* Border color for separation */
    }

    img {
        max-width: 100%;
        height: auto;
    }
</style>

<header></header>

<div class="container-fluid fixed-top BC_Header_top">
    <div class="row align-items-center">
        <div class="col-md-2">
            <a href="/"><img src="images/LogoBC_BrainControl.png" /></a>
        </div>
        <div class="col-md-3 BC_LoginDisplay">
            <LoginDisplay />
        </div>
        <div class="col-md-7">
            <NavMenuBC />
        </div>
    </div>
</div>

<div class="container-fluid BC_Header_2nd">
    &nbsp;
</div>

<div class="BC_Content">
    @Body
</div>

<BC_Footer></BC_Footer>

<div class="BC_Copyright">
    <div class="container">
        <p>&copy; 2023 Copyrights. All rights reserved. <a class="text-primary" href="https://www.braincourt.com" target="_blank">Braincourt GmbH</a></p>
    </div>
</div>

